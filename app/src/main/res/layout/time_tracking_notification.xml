<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:layout_gravity="top"
    >

    <TextView
        android:id="@+id/WhatWasYouDoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Чем занимались с 10:00 до 10:30?"
        android:layout_weight="0"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/notifyButton1"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Читал"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/notifyButton2"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Работал"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/notifyButton3"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Отдыхал"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        >

        <Button
            android:id="@+id/notifyButton4"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Играл на пк"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/notifyButton5"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Учился"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/notifyButton6"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:minHeight="75dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_gravity="center"
            android:textSize="11sp"
            android:text="Спорт"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/sendEventEditText"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:hint="Ваш ответ"
            android:textColorHint="@color/grey"
            android:textColor="@color/darkGrey"
            />

        <ImageButton
            android:id="@+id/sendEventButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_send_black_24dp"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:tint="@color/black"
            android:tintMode="src_in"
            />

    </LinearLayout>



</LinearLayout>