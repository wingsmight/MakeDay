<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wingsmight.makeday">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".Menu.AboutAppActivity" />

        <activity android:name=".Menu.NotificationSettingsActivity" />

        <activity android:name=".GoalCheckingActivity"
            android:theme="@style/Theme.Transparent"
            android:label=""
            />

        <receiver android:name=".Tracker.ReceiveNotifyAnswer">
            <intent-filter>
                <action android:name="onNotifyButton" />
            </intent-filter>
        </receiver>
        <receiver android:name=".GoalNotification" />
    </application>

</manifest>